{
    "name": "fenix-ide-desktop",
    "version": "2.0.0",
    "description": "Fenix IDE 2.0 - Desktop Version",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux"
    },
    "keywords": [
        "ide",
        "editor",
        "code",
        "electron",
        "desktop"
    ],
    "author": "Fenix Academy",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4"
    },
    "dependencies": {
        "monaco-editor": "^0.44.0"
    },
    "build": {
        "appId": "com.fenixacademy.ide",
        "productName": "Fenix IDE 2.0",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!node_modules/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}






