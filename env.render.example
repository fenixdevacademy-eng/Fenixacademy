# Variáveis de ambiente para Render.com
# Configure estas variáveis no painel do Render

# ===========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://fenix-academy-frontend.onrender.com
NEXT_PUBLIC_APP_NAME=Fenix Academy
NEXT_PUBLIC_APP_DESCRIPTION=Plataforma de ensino de programação e tecnologia
NEXT_PUBLIC_APP_VERSION=2.0.0

# ===========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ===========================================
# Será configurado automaticamente pelo Render
# DATABASE_URL=postgresql://username:password@host:port/database_name

# ===========================================
# CONFIGURAÇÕES DO STRIPE (PAGAMENTOS)
# ===========================================
# Configure no painel do Render
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ===========================================
NEXTAUTH_URL=https://fenix-academy-frontend.onrender.com
NEXTAUTH_SECRET=your-super-secret-key-here

# ===========================================
# CONFIGURAÇÕES DE EMAIL
# ===========================================
EMAIL_FROM=noreply@fenixdevacademy.com
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password

# ===========================================
# CONFIGURAÇÕES DE REDES SOCIAIS
# ===========================================
NEXT_PUBLIC_FACEBOOK_APP_ID=...
NEXT_PUBLIC_TWITTER_HANDLE=@fenixdevacademy
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/fenixdevacademy

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
SECRET_KEY=your-django-secret-key-here
DEBUG=False
ALLOWED_HOSTS=fenix-academy-backend.onrender.com,fenix-academy-frontend.onrender.com
CORS_ALLOWED_ORIGINS=https://fenix-academy-frontend.onrender.com
CORS_ALLOW_CREDENTIALS=True

# ===========================================
# CONFIGURAÇÕES DE CACHE
# ===========================================
# Será configurado automaticamente pelo Render
# REDIS_URL=redis://username:password@host:port

# ===========================================
# CONFIGURAÇÕES DE LOGS
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ===========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CRASH_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
