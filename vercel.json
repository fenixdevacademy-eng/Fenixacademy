{
  "version": 2,
  "name": "fenix-academy",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "frontend/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://fenixdevacademy.com.br",
    "NEXT_PUBLIC_API_URL": "https://fenixdevacademy.com.br/api"
  }
}